<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Loads ServiceProviders by name -->
	<bean id="serviceProviderFactory" class="org.springframework.social.provider.jdbc.JdbcServiceProviderFactory">
		<constructor-arg ref="jdbcTemplate" />
		<constructor-arg ref="stringEncryptor" />
	</bean>

	<!-- String encryptor for encrypting OAuth specifics in the DB -->
	<bean id="stringEncryptor" class="org.springframework.security.encrypt.NoOpStringEncryptor" factory-method="getInstance" />				

	<!-- Twitter service provider -->
	<bean id="facebookProvider" factory-bean="serviceProviderFactory" factory-method="getServiceProvider">
		<constructor-arg value="facebook" />
	</bean>
	
</beans>